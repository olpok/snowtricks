{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}

<div class="container">
    
    <h1>Trick</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ trick.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ trick.description }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ trick.category }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                    {% for image in trick.images %}
                        <div class="col" style="width:100 px; flex: none; margin: 5px">
                        <img src="{{vich_uploader_asset(image,'imageFile') }} " width="100" alt="">
                        </div>
                    {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Video</th>
                    <td>
                    {% for video in trick.videos %}
                        <div class="col" style="width:100 px; flex: none; margin: 5px">
                            <video width="320" height="240" controls>
                                <source src="{{vich_uploader_asset(video,'videoFile') }}"  type="video/mp4">
                            </video>
                        </div>
                    {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

    <a href="{{ path('trick_index') }}">retour Ã  la liste</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}

</div>
{% endblock %}
