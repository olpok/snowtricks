{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}

<div class="container">
    <h1>Trick index</h1>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Images</th>
                <th>Urls</th>
                <th>embed Urls</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for trick in tricks %}
            <tr>
                <td>{{ trick.name }}</td>
                <td>{{ trick.description }}</td>
                <td>{{ trick.category }}</td>
                <td>
                    {% for image in trick.images %}
                    <div class="col" style="width:100 px; flex: none; margin: 5px">
                        <img src="{{vich_uploader_asset(image,'imageFile') }} " width="100" alt="">
                    </div>
                    {% endfor %}
                </td>
                <td>
                    {% for video in trick.videos %}
                    
                    <p>  loop ext {{ video.Url}}</p>

                     
                      {#{video}#}
                    <p>
                            loop inter
                        {% for video in embedUrl %}
                            {{video}}
                            <div class="col" style="width:100 px; flex: none; margin: 5px">
                            <iframe width="220" height="140s" src =" {#{ video}#}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        {% endfor %}
                    </p> 

                    {% endfor %}
                </td>
                <td>  
                      {#{video}#}
                    <p>
                        {% for video in embedUrl %}
                            {{video}}
                            <div class="col" style="width:100 px; flex: none; margin: 5px">
                            <iframe width="220" height="140s" src =" {#{ video}#}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        {% endfor %}
                    </p> 

                </td>
                <td>
                    <a href="{{ path('trick_show', {slug: trick.slug,'id': trick.id}) }}">show</a>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and app.user.isVerified == true %}
                    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>
                    {% else %}
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and app.user.isVerified == true %}
    <a href="{{ path('trick_new') }}">Créer un nouveau trick</a>
    {% else %}
    {% endif %}
</div>
{% endblock %}